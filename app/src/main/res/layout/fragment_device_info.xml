<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DeviceInfoFragment"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/ic_back"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ble_device"
            android:textColor="@color/theme"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="11dp"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="52dp"

        app:layout_constraintTop_toBottomOf="@id/ll_back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:textSize="28dp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_car_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/car_num"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                />
            <EditText
                android:id="@+id/et_car_num"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:hint="@string/car_num"
                android:paddingStart="10dp"
                android:maxLines="1"
                android:maxLength="16"
                android:singleLine="true"
                android:background="@drawable/bg_rectangle_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_car_num"/>

            <TextView
                android:id="@+id/tv_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/identify"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_car_num"
                />
            <EditText
                android:id="@+id/et_identify"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:hint="@string/identify"
                android:maxLength="4"
                android:maxLines="1"
                android:digits="0123456789abcdefABCDEF"
                android:paddingStart="10dp"
                android:background="@drawable/bg_rectangle_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_identify"/>

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/length"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_identify"
                />
            <EditText
                android:id="@+id/et_length"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:hint="@string/length"
                android:maxLength="5"
                android:paddingStart="10dp"
                android:background="@drawable/bg_rectangle_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_length"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/et_length"
                app:layout_constraintEnd_toEndOf="@id/et_length"
                app:layout_constraintBottom_toBottomOf="@id/et_length"/>

            <TextView
                android:id="@+id/tv_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/width"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_length"
                />
            <EditText
                android:id="@+id/et_width"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:hint="@string/width"
                android:maxLength="5"
                android:paddingStart="10dp"
                android:background="@drawable/bg_rectangle_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_width"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/et_width"
                app:layout_constraintEnd_toEndOf="@id/et_width"
                app:layout_constraintBottom_toBottomOf="@id/et_width"/>

            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/height"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_width"
                />
            <EditText
                android:id="@+id/et_height"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:hint="@string/height"
                android:maxLength="5"
                android:paddingStart="10dp"
                android:background="@drawable/bg_rectangle_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_height"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mm"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/et_height"
                app:layout_constraintEnd_toEndOf="@id/et_height"
                app:layout_constraintBottom_toBottomOf="@id/et_height"/>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="@string/save"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_rectangle_green"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/et_height"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>