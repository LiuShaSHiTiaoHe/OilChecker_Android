<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".fragment.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:textSize="42sp"
            android:textColor="@color/black"
            android:text="@string/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:text="@string/add_device"
            android:textColor="@color/theme"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_v5"
            app:layout_constraintTop_toBottomOf="@id/tv_home"/>
        <LinearLayout
            android:id="@+id/ll_sync"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_white"
            app:layout_constraintStart_toStartOf="@id/gl_v5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_home">
            <ImageView
                android:id="@+id/iv_sync"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_sync"/>
            <TextView
                android:id="@+id/tv_sync"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="@string/sync"
                android:gravity="center"
                android:layout_marginStart="6dp"
                android:textColor="@color/theme"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/gl_v5"
            app:layout_constraintTop_toBottomOf="@id/tv_car_num"
            android:background="@drawable/bg_rectangle_white">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="@string/oil_state"
                android:textColor="@color/black"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_real_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown"
                android:textColor="@color/theme"
                android:textSize="20sp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="6dp"
                android:layout_gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="102dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/gl_v5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_car_num"
            android:background="@drawable/bg_rectangle_white">

            <TextView
                android:id="@+id/tv_average_oil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:text="@string/average_fuel"
                android:textColor="@color/black"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/tv_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0L"
                android:textColor="@color/theme"
                android:textSize="20sp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="6dp"
                android:layout_gravity="right"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_display"
            android:layout_width="0dp"
            android:layout_height="372dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_rectangle_white">
            <com.creageek.segmentedbutton.SegmentedButton
                android:id="@+id/segmented"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:padding="2dp"
                android:orientation="horizontal"
                app:segmentHeight="31dp"
                android:background="@drawable/btn_line"
                app:segmentColor="@color/theme"
                app:textColorChecked="@color/theme"
                app:textColor="@color/white"
                app:segmentColorChecked="@color/white"
                app:cornerRadius="4dp"
                app:borderColor="@color/theme">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/day"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/week"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>
            </com.creageek.segmentedbutton.SegmentedButton>
            <ImageView
                android:id="@+id/placeholder1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/empty"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/segmented"/>


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/empty"
                app:layout_constraintTop_toBottomOf="@id/segmented"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_display"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>